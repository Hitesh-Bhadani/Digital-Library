<div class="d-flex justify-content-center align-items-center">
  <div class="card shadow" style="max-width: 400px; width: 100%; border-radius: 1.5rem;">
    <div class="card-header text-center p-4" style="background: linear-gradient(90deg, #e1b382, #a67c52); border-radius: 1.5rem 1.5rem 0 0;">
      <i class="fa-solid fa-unlock-keyhole fa-2x mb-2" style="color: #fff;"></i>
      <h2 class="mb-0 text-white">Forgot Password</h2>
    </div>
    <div class="card-body p-4">
      <% if (error) { %>
        <div class="alert alert-danger py-2"><i class="fa-solid fa-triangle-exclamation"></i> <%= error %></div>
      <% } %>
      <% if (success) { %>
        <div class="alert alert-success py-2">
          <i class="fa-solid fa-circle-check"></i> <%= success %>
          <a href="/login" class="alert-link ms-2">Click here to login</a>
        </div>
      <% } %>
      <form method="POST" action="/forgot-password">
        <div class="mb-3">
          <label for="email" class="form-label text-brown fw-bold">
            <i class="fa-solid fa-envelope"></i> Enter your email address
          </label>
          <input type="email" name="email" id="email" class="form-control rounded-3" placeholder="you@example.com" required>
        </div>
        <button type="submit" class="btn w-100 text-white" style="background: linear-gradient(90deg, #e1b382, #a67c52); border-radius: 8px;">
          <i class="fa-solid fa-paper-plane"></i> Send Reset Link
        </button>
      </form>
    </div>
  </div>
</div>
