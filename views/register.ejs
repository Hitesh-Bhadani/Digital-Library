<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Noto+Sans:wght@400;700&display=swap');
  body {
    background: linear-gradient(135deg, #f8f7f4 0%, #f3ede4 100%);
    min-height: 100vh;
    font-family: 'Roboto', 'Noto Sans', Arial, sans-serif;
    margin: 0;
    padding: 0;
  }
  .register-card {
    max-width: 400px;
    margin: 50px auto;
    border-radius: 1.5rem;
    box-shadow: 0 8px 32px 0 rgba(166, 124, 82, 0.13);
    background: #fff;
    transition: max-width 0.3s;
    font-family: 'Roboto', 'Noto Sans', Arial, sans-serif;
  }
  .register-header {
    background: linear-gradient(90deg, #e1b382, #a67c52);
    border-radius: 1.5rem 1.5rem 0 0;
    padding: 2rem 1.5rem 1rem 1.5rem;
    color: #fff;
    text-align: center;
    position: relative;
  }
  .register-header i {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #fff;
  }
  .register-header h2 {
    font-family: 'Noto Sans', 'Roboto', Arial, sans-serif;
    font-weight: 700;
    font-size: 2rem;
    letter-spacing: 1px;
  }
  .register-header p {
    font-size: 1rem;
    opacity: 0.93;
    font-weight: 500;
  }
  .form-label {
    font-weight: 500;
    color: #a67c52;
    margin-bottom: 0.2em;
    font-family: 'Roboto', 'Noto Sans', Arial, sans-serif;
  }
  .form-control {
    border-radius: 7px;
    border: 1.5px solid #ececec;
    padding: 0.6em 1em;
    font-size: 1em;
    background: #faf9f6;
    transition: border 0.2s;
    margin-bottom: 0.7em;
  }
  .form-control:focus {
    border-color: #a67c52;
    box-shadow: 0 0 0 0.18rem rgba(225, 179, 130, 0.15);
  }
  .register-btn {
    background: linear-gradient(90deg, #e1b382, #a67c52);
    border: none;
    color: #fff;
    font-weight: bold;
    border-radius: 8px;
    font-size: 1.1em;
    letter-spacing: 0.5px;
    transition: background 0.3s, box-shadow 0.2s;
    box-shadow: 0 2px 8px rgba(166, 124, 82, 0.09);
  }
  .register-btn:hover {
    background: linear-gradient(90deg, #a67c52, #e1b382);
    color: #fff;
    box-shadow: 0 4px 16px rgba(166, 124, 82, 0.15);
  }
  .register-card a {
    color: #a67c52;
    text-decoration: underline;
    font-size: 0.97em;
  }
  .register-card a:hover {
    color: #e1b382;
    text-decoration: underline;
  }
  .alert-danger {
    background: #ffe9e0;
    color: #a94442;
    border: none;
    border-radius: 6px;
    padding: 0.7em 1em;
    font-size: 1em;
    margin-top: 1em;
  }
  /* Responsive tweaks */
  @media (max-width: 575.98px) {
    .register-card {
      max-width: 97vw;
      margin: 20px auto;
      border-radius: 1rem;
    }
    .register-header {
      padding: 1.2rem 0.8rem 0.8rem 0.8rem;
      border-radius: 1rem 1rem 0 0;
    }
    .register-header h2 {
      font-size: 1.4rem;
    }
    .register-header i {
      font-size: 1.5rem;
    }
    .p-4 {
      padding: 1.2rem !important;
    }
    .form-label {
      font-size: 0.95rem;
    }
    .register-btn {
      font-size: 1rem;
      padding: 0.6rem 0;
    }
  }
  @media (max-width: 350px) {
    .register-card {
      max-width: 100vw;
      margin: 5px;
      border-radius: 0.5rem;
    }
  }
</style>

<div class="register-card shadow">
  <div class="register-header">
    <i class="fa-solid fa-user-plus"></i>
    <h2 class="mb-0">Create Account</h2>
    <p class="mb-0">Join us and unlock new possibilities!</p>
  </div>
  <form method="POST" action="/register" class="p-4">
    <div class="mb-3">
      <label class="form-label" for="username">
        <i class="fa-solid fa-user"></i> Username
      </label>
      <input id="username" name="username" class="form-control" placeholder="Choose a username" required>
    </div>
    <div class="mb-3">
      <label class="form-label" for="password">
        <i class="fa-solid fa-lock"></i> Password
      </label>
      <input id="password" name="password" type="password" class="form-control" placeholder="Create a password" required>
    </div>
    <div class="mb-3">
      <label class="form-label" for="name">
        <i class="fa-solid fa-id-card"></i> Full Name
      </label>
      <input id="name" name="name" class="form-control" placeholder="Your full name" required>
    </div>
    <div class="mb-3">
      <label class="form-label" for="email">
        <i class="fa-solid fa-envelope"></i> Email
      </label>
      <input id="email" name="email" type="email" class="form-control" placeholder="you@example.com" required>
    </div>
    <button type="submit" class="btn register-btn w-100 py-2 mt-2">
      <i class="fa-solid fa-paper-plane"></i> Register
    </button>
    <div class="mt-3 text-center">
      <a href="/login">Already have an account? Login</a>
    </div>
    <% if (error) { %>
      <div class="alert alert-danger mt-3 mb-0 py-2 px-3" role="alert">
        <i class="fa-solid fa-triangle-exclamation"></i> <%= error %>
      </div>
    <% } %>
  </form>
</div>



